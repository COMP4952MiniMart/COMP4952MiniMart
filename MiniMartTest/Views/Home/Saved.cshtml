@model MiniMartTest.Models.PostViewModel
@{
    ViewBag.Title = "Mini Mart";
}

<h1 id="main-title">@ViewBag.Title</h1>
<hr />

@*Item Detials Page*@ 

@*Profile navigation*@
<div class="row">
    <div class="col-md-2">
        <table>
            <tr>
                <td>
                    <img id="avatar-logo" src="@Url.Content("~/Content/Images/avatar.png")" />
                    <h2>Name</h2>
                </td>
            </tr>
            <tr>
                <td>
                    <p>@Html.ActionLink("Home", "Index", "Home")</p>
